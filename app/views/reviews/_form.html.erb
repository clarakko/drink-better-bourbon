<%= form_for [@bourbon, @review] do |f| %>
  <%= f.label :description%>
  <%= f.text_area :description, rows: "12" %>
  <%= f.label :rating, "Rating (1-100)" %>
  <%= f.text_field :rating %>

  <% if @review.persisted? %>
    <%= f.submit "Update Review", class: "button small" %>
  <% else %>
    <%= f.submit "Add Review", class: "button small" %>
  <% end %>
<% end %>
<%= link_to 'Cancel', bourbon_path(@bourbon), class: "button small" %>
